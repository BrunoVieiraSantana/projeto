<LoginApp>:
    MDFloatLayout:
        radius: [0, 0, 0, 0]
        md_bg_color: app.theme_cls.primary_dark
        Image:
            source: 'images/logo.png'
            size_hint: (.7, .7)
            pos_hint: {'center_x':0.5, 'center_y':0.78}

        MDTextField:
            hint_text: 'Login'
            halign: 'center'
            size_hint: (.4, .060)
            pos_hint: {'center_x': 0.5, 'center_y':0.60}
            mode: 'rectangle'

        MDTextField:
            hint_text: 'Senha'
            halign: 'center'
            size_hint: (.4, .060)
            pos_hint: {'center_x': 0.5, 'center_y':0.53}
            mode: 'rectangle'
            password: True

        MDFillRoundFlatButton:
            id: 'login_button'
            text: '    login    '
            pos_hint: {'center_x': 0.5, 'center_y': 0.46}
            on_press: root.go_home()


        MDIconButton:
            icon: 'account-plus'
            pos_hint: {'center_x': .81, 'center_y': .07}
            on_press: root.go_signup()


