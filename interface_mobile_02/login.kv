<LoginApp>:
    MDBoxLayout:
        orientation: 'vertical'
        md_bg_color: app.theme_cls.primary_dark
        spacing: 10
        Image:
            source: 'images/logo.png'
            pos_hint: {'center_x': 0.5}
            size_hint: (.7, .7)


        MDTextField:
            hint_text: 'Login'
            pos_hint: {'center_x': 0.5}
            size_hint: (.4, .12)
            mode: 'rectangle'

        MDTextField:
            hint_text: 'Senha'
            pos_hint: {'center_x': 0.5}
            size_hint: (.4, .12)
            mode: 'rectangle'
            password: True

        MDFillRoundFlatButton:
            id: 'login_button'
            text: 'login'
            pos_hint: {'center_x': 0.5}
            padding: [50, 0, 50, 0]
            on_press: root.go_home()
            
        MDLabel:
            text: ''
            pos_hint: {'center_x': 0.5}
            size_hint: (.4, .3)


        MDIconButton:
            icon: 'account-plus'
            pos_hint: {'right': 1}
            on_press: root.go_signup()


