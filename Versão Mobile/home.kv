#:import NoTransition kivy.uix.screenmanager.NoTransition

<CustomRow>:
    orientation: 'horizontal'

    MDCheckbox:
        size_hint_x: None 
        width: dp(30)

    MDLabel:
        text: root.name

<Check@MDCheckbox>:
    group: 'group'
    size_hint: None, None
    size: dp(48), dp(48)
    
<AddCard>:
    id: card
    orientation: 'vertical'
    size_hint: .6, .5
    pos_hint: {'center_x': .5, 'center_y': .5}
    md_bg_color: app.theme_cls.primary_dark

    MDFloatLayout:
        MDTopAppBar:
            id: addtoolbar
            title: "Registro rápido"
            elevation:0
            md_bg_color: app.theme_cls.primary_color
            pos_hint: {"center_x": 0.5, "center_y": 0.97}
            right_action_items: [["close", lambda x: root.fechar()]]

        MDTextField:
            hint_text: 'Nome'
            fill_color_normal: app.theme_cls.primary_dark
            size_hint_x: .8
            pos_hint: {'center_x': .5, 'center_y': .7}
            write_tab: False
            multiline: False

        MDTextField:
            hint_text: 'Valor'
            fill_color_normal: app.theme_cls.primary_dark
            size_hint_x: .8
            pos_hint: {'center_x': .5, 'center_y': .5}
            write_tab: False
            multiline: False

        MDFillRoundFlatButton:
            id: 'add_button'
            text: 'Adicionar'
            pos_hint: {'center_x': .5, 'center_y': .2}
            padding: [50, 0, 50, 0]    

<PlotWidgetPie>
<PlotWidgetBar>
<Home>: 
    md_bg_color: app.theme_cls.primary_color
    ScreenManager:
        id: screen_nav
        transition: NoTransition()
        MDScreen:
            name: 'overview'

            ScrollView:
                do_scroll_x: False
                do_scroll_y: True

                MDBoxLayout:
                    orientation: 'vertical'
                    id: layout
                    padding: 15
                    spacing: 15
                    size_hint: 1, None
                    height: self.minimum_height

                    MDBoxLayout:
                        orientation: 'vertical'
                        size_hint: 1, None

                    MDLabel:
                        text: "Porcentagem da Receita gasta"
                        size_hint_y: None
                        height: self.texture_size[1]
                        halign: "center"
                        canvas.before:
                            Rectangle:
                                size: self.size
                                pos: self.pos

                    MDProgressBar:
                        color: '#5679ad'
                        value:75
                        size_hint_y: None
                        height:35
                        halign: "center"

                    PlotWidgetBar:
                        size_hint_y: None
                        height: 900
                        halign: "center"
                        canvas.before:
                            Rectangle:
                                size: self.size
                                pos: self.pos

                    PlotWidgetPie:
                        size_hint_y: None
                        height: 900
                        halign: "center"
                        canvas.before:
                            Rectangle:
                                size: self.size
                                pos: self.pos

        MDScreen:
            name: 'add'
            MDCard:
                size_hint: 0.75, 0.45
                pos_hint: {"center_x": 0.5, "center_y": 0.65}
                md_bg_color: app.theme_cls.primary_dark

            MDLabel:
                text: 'Adicionar'
                pos_hint: {'center_y':.85}
                halign: 'center'
                
            MDSegmentedButton:
                pos_hint: {"center_x": 0.5, "center_y":0.80}
                size_hint_x: .55

                MDSegmentedButtonItem:
                    text: "Despesas"

                MDSegmentedButtonItem:
                    text: "Renda"


            MDTextField:
                icon_left: "plus-box"
                hint_text: "nome do registro"
                size_hint_x: .65
                pos_hint: {"center_x": 0.5, "center_y":0.70}
                helper_text_mode: "on_error"
                multiline: False

            MDTextField:
